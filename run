#!/bin/bash

rm *.log

./build/MyStore --listeningport 5000 --clustermembership 127.0.1.1:5000 127.0.1.1:5001 127.0.1.1:5002 &
./build/MyStore --listeningport 5001 --clustermembership 127.0.1.1:5000 127.0.1.1:5001 127.0.1.1:5002 &
./build/MyStore --listeningport 5002 --clustermembership 127.0.1.1:5000 127.0.1.1:5001 127.0.1.1:5002 &

sleep 60000000000

pgrep MyStore | while read -r line ; do
   kill -9 $line
done


